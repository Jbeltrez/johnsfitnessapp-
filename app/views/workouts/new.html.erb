<%= form_for @workout do |f| %>
    <%= f.label :workout_name %> 
    <%= f.text_field :name %> 

    <%= f.select :category_id, options_for_select(Category.pluck(:name, :id).sort) %> 
  
  <!-- <%= f.submit %> -->

  <%= f.fields_for :exercises do |ff| %>
    <%= ff.label :name %> 
    <%= ff.text_field :name %> 
    <%= ff.label :quantity %> 
    <%= ff.text_field :quantity %> 
    <%= ff.label :difficulty_level %> 
    <%= ff.text_field :difficulty_level %>

  <% end %>
  <%= f.submit %> 
<% end %> 


