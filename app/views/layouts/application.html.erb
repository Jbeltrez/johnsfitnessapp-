<!DOCTYPE html>
<html>
  <head>
    <title>Johnsfitnessapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      
      <% if logged_in? %>
        <%= link_to "My Workouts", my_workouts_path %>
