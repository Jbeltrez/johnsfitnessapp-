      <% else %>
      <p>Sign up or Login<p>
        <%= link_to "Login",  login_path %>
        <%= link_to "Sign up", new_user_path %>
      <% end %>
      
    </nav>

    <%# <% if flash[:errors] %>
      <%# <p><%= pluralize(flash[:errors].count, "error")%> %>
      <%# <p><%= flash[:errors] %></p> %>
    <%# <% end %> %> %>
    
    <%= yield %>
  </body>
</html>
